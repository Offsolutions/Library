@model IEnumerable<LibraryManagement.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create","",new{ @class="btn btn-space btn-primary"})
</p>
<table class="table table-striped table-hover table-fw-widget" id="table3">
 <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>
	 </thead>
	 <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Did },new {@class= " badge badge-primary" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Did },new {@class= " badge badge-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Did },new {@class= " badge badge-danger" })
        </td>
    </tr>
}
</tbody>
</table>
